#!/bin/sh
# postrm script for securedrop-document
#
# see: dh_installdeb(1)

set -e
#set -x
# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
. /usr/share/debconf/confmodule
db_get securedrop-document/document_user
document_user="$RET"
db_get securedrop-document/document_uid
document_uid="$RET"
db_get securedrop-document/document_gid
document_gid="$RET"

case "$1" in
    upgrade|failed-upgrade)
    ;;

    remove|abort-install|abort-upgrade|disappear)
        if [ -f /etc/apache2/sites-enabled/document ]; then
            rm  /etc/apache2/sites-enabled/document
        fi

        if [ "$(getent passwd $document_user)" ]; then
            deluser $document_user
        fi
    
        if [ "$(getent group $document_user)" ]; then
            delgroup $document_user
        fi

        if [ -d /var/www/securedrop/app ]; then
            rm -R /var/www/securedrop/app
        fi
    ;;

    purge)
        echo ""
        echo "#######################################################"
        echo "If this is running in a chroot"
        echo "you will need to umount store keys db directories first"
        echo "#######################################################"

        if [ -d /var/www/securedrop/ ]; then
            rm -R /var/www/securedrop
        fi

        if [ -f /etc/apache2/sites-enabled/document ]; then
            rm  /etc/apache2/sites-enabled/document
        fi

        if [ "$(getent passwd $document_user)" ]; then
            deluser $document_user
        fi

        if [ "$(getent group $document_user)" ]; then
            delgroup $document_user
        fi

        db_purge      
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
